<div class="mws-panel-header">
	<span><i class="icon-filter"></i> Filtro</span>
</div>

<div class="mws-panel-body no-padding">
	<%= form_for @search, :url => pecas_path, :html => { :method => :get, :class => "mws-form" } do |f| %>
		<div class="mws-form-block">
			<div class="mws-form-row bordered">
				<label class="mws-form-label">Tema</label>
				<div class="mws-form-item">
					<%= f.text_field :tema_contains, :class => "large" %>
				</div>
			</div>

			<div class="mws-form-row bordered">
				<label class="mws-form-label">Grau</label>
				<div class="mws-form-item">
					<%= f.select :grau_id_equals, @graus, { :include_blank => "Selecione" }, { :class => "large" } %>
				</div>
			</div>

			<div class="mws-form-row bordered">
				<label class="mws-form-label">Autor</label>
				<div class="mws-form-item">
					<%= f.select :responsavel_id_equals, @irmaos, { :include_blank => "Selecione" }, { :class => "large" } %>
				</div>
			</div>

			<div class="mws-button-row">
				<input type="submit" value="Filtrar" class="btn btn-success">
				<input type="reset" value="Limpar" class="btn " onclick="window.location.href='/pecas';">
			</div>
		</div>
	<% end %>
</div>