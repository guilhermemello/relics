<div class="mws-panel-header">
	<span><i class="icon-filter"></i> Filtro</span>
</div>

<div class="mws-panel-body no-padding">
	<%= form_for @search, :url => eleicoes_path, :html => { :method => :get, :class => "mws-form" } do |f| %>
		<div class="mws-form-block">
			<div class="mws-form-row bordered">
				<label class="mws-form-label">Cargo</label>
				<div class="mws-form-item">
					<%= f.select :cargo_id_equals, @cargos, { :include_blank => "Selecione o cargo" }, { :class => "large" } %>
				</div>
			</div>
			<div class="mws-form-row bordered">
				<label class="mws-form-label">Per√≠odo</label>
				<div class="mws-form-item">
					<%= f.text_field :periodo_equals, :class => "large" %>
				</div>
			</div>
		</div>
		<div class="mws-button-row">
				<input type="submit" value="Filtrar" class="btn btn-success">
				<input type="reset" value="Limpar" class="btn " onclick="window.location.href='/administracao';">
		</div>
	<% end %>
</div>