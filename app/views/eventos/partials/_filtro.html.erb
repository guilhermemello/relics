<div class="mws-panel-header">
	<span><i class="icon-filter"></i> Filtro</span>
</div>

<div class="mws-panel-body no-padding">
	<%= form_for @search, :url => eventos_path, :html => { :method => :get, :class => "mws-form" } do |f| %>
		<div class="mws-form-block">
			<div class="mws-form-row bordered">
				<label class="mws-form-label">Tipo</label>
				<div class="mws-form-item">
					<%= f.select :tipo_evento_id_equals, @tipo_eventos, { :include_blank => "Selecione" }, { :class => "large" } %>
				</div>
			</div>

			<div class="mws-button-row">
				<input type="submit" value="Filtrar" class="btn btn-success">
				<input type="reset" value="Limpar" class="btn " onclick="window.location.href='/eventos';">
			</div>
		</div>
	<% end %>
</div>